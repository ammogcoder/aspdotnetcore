@page
@model DocumentTranslatorWeb.Pages.FormPostModel
@{
    ViewData["Title"] = "FormPost";
}

<h2>FormPost</h2>
<form method="post" asp-controller="UploadFiles" asp-action="Index" enctype="multipart/form-data">
    <div class="form-group">
        <div class="col-md-10">
            <p>Upload one or more files using this form:</p>
            <input type="file" name="files" multiple />
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-10">
            <input type="submit" value="Upload" />
        </div>
    </div>
</form>

